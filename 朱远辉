<template>
  <div class="test">
    <div>平均值: {{average}}</div>
    <ul class="list" v-for="(item,index) in dataList" :key="index">
      <li>{{item.id}}</li>
      <li>{{item.data}}</li>
      <li>{{item.time}}</li>
    </ul>

    <button @click="update">加载更多</button>
  </div>
</template>

<script>
export default {
  name: "test",
  data() {
    return {};
  },
  created() {
    this.$store.dispatch("getDataCall");
  },
  computed: {
    dataList() {
      return this.$store.state.dataList;
    },
    average() {
      return this.$store.getters.getAverage;
    }
  },
  methods: {
    update() {
      this.$store.commit("getDataList");
    }
  }
};
</script>

<style scoped lang="less">
.test {
  .list {
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
